<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slc.android.sceneliner_1_0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name="com.slc.android.sceneliner.control.ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">



        <activity
            android:name="com.slc.android.sceneliner.app.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.slc.android.sceneliner.app.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <!--
            <activity
            android:name="com.slc.android.sceneliner.app.MainActivity"
            android:label="@string/title_activity_slbrowse" >
        </activity>
        -->
        <activity
            android:name="com.slc.android.sceneliner.app.SLPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_slplayer" >
        </activity>
        <activity
            android:name="com.slc.android.sceneliner.app.BusinessSettingsActivity"
            android:label="@string/title_activity_business_settings" >
        </activity>
        <activity
            android:name="com.slc.android.sceneliner.app.SettingsActivity"
            android:label="@string/title_activity_user_settings" >
        </activity>
    </application>

</manifest>
